<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/journal_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="@color/primary_light"
    card_view:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


            <TextView
                android:id="@+id/tvJournalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="23sp"
                android:textColor="@color/primary_text"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:text="Title"/>

            <TextView
                android:id="@+id/tvJournalAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvJournalTitle"
                android:text="Author"/>



        <TextView
            android:id="@+id/tvJournalRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/primary_text"
            android:drawableRight="@drawable/ic_rate_star"
            android:layout_alignBaseline="@id/tvJournalTitle"
            android:text="Rating"
            android:layout_alignParentEnd="true"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>